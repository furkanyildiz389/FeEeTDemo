<style>



    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }



    body {
        font-family: Arial, sans-serif;
    }





    .navbar {
        display: flex;
        align-items: center;
        background-color: #272727;
        padding: 10px 20px;
        color: white;
        height: 4.5rem;
        background: linear-gradient(135deg, #0b0d24,
        /* Koyu mavi - gece gökyüzü */
        #171e5e 40%,
        /* Mor tonlar */
        #0f0c29 100%);
        /* Koyu siyah - uzay siyahı */
        /* Navbar öğeleri için ekstra stil */

        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.5);
        /* Hafif gölge efekti */

        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        /* Hafif beyaz alt sınır */
    }



        .navbar .logo {
            display: flex;
            justify-content: left;
            font-size: 24px;
            font-weight: bold;
            padding-left: 2.5rem;
        }



            .navbar .logo a {
                text-decoration: none;
                color: white;
            }



        /* Navbar menü elemanları */

        .navbar ul {
            margin-top: 1rem;
            list-style: none;
            display: flex;
            flex-direction: row;
            margin-left: 9rem;
            gap: 3rem;
        }



            .navbar ul li {
                display: inline;
            }



                .navbar ul li a {
                    text-decoration: none;
                    color: white;
                    font-size: 18px;
                }



    .gri:hover {
        color: gray;
        transition: 0.5s;
    }



    /* Navbar sağ taraftaki butonlar */

    .navbar .buttons {
        display: flex;
        margin-left: auto;
        gap: 10px;
        margin-right: 20px;
    }





        .navbar .buttons button {
            padding: 10px 25px;
            background-color: transparent;
            border: 1px solid white;
            border-radius: 10px;
            color: white;
            cursor: pointer;
            text-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
            box-shadow: 0 5px 15px rgba(17, 20, 17, 0.6), 0 0 10px #4d554d, 0 0 20px #2e382c;
        }



            .navbar .buttons button:hover {
                color: #11123C;
                background-color: white;
                transition: 0.5s;
            }
</style>







<nav class="navbar">
    <!-- Sol üst köşede site başlığı (logo) -->
    <div class="logo"><a href="/home">FeEeT</a></div>

    <!-- Menü öğeleri -->
    <ul>
        <li><a class="gri" href="/home/#hakkimizda">Hakkımızda</a></li>
        <li><a class="gri" href="/home/#iletisim">İletişim</a></li>
    </ul>

    <!-- Sağdaki butonlar -->
    <div class="buttons">
        @if (User.Identity.IsAuthenticated)
        {
            <a href="/user/" id="createbtn">
                <button>Profil</button>
            </a>
            <!-- Kullanıcı giriş yaptıysa "Oluştur" butonu göster -->
            <a href="/user/createevent" id="createbtn">
                <button>Oluştur</button>
            </a>

            <a class="nav-link" href="#" onclick="document.getElementById('logoutForm').submit();">
                <button>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0z" />
                        <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708z" />
                    </svg>
                </button>
            </a>
            <form id="logoutForm" action="@Url.Action("Logout", "User")" method="post" style="display: none;">
                @Html.AntiForgeryToken()
            </form>
        }
        else
        {
            <!-- Kullanıcı giriş yapmadıysa "Giriş Yap" ve "Kayıt Ol" butonları göster -->
            <a href="/login/index" id="logbtn">
                <button>Giriş Yap</button>
            </a>
            <a href="/register/index" id="signbtn">
                <button>Kayıt Ol</button>
            </a>
        }
    </div>
</nav>
