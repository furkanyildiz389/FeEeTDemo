<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FeEeT Kullanıcı Paneli</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <style>
        body {
            background-color: white;
        }
        /* Sidebar */
        .sidebar {
            background-color: #0A1128;
            color: white;
            min-height: 100vh;
            position: fixed;
            top: 0;
            bottom: 0;
            width: 220px;
            z-index: 1000;
            padding: 20px 10px;
        }

            .sidebar h4 {
                color: white;
                margin-bottom: 2rem;
                text-align: center;
                font-weight: bold;
            }

            .sidebar .nav-link {
                color: #A9D6E5;
                margin: 10px 0;
                padding: 10px 15px;
                border-radius: 5px;
            }

                .sidebar .nav-link:hover {
                    background-color: #A9D6E5;
                    color: #ffffff;
                }
        /* Navbar */
        .navbar-user-panel {
            background-color: #0A1128;
            padding: 0.75rem 1rem;
            border-radius: 0 0 10px 10px;
            margin-left: 220px;
        }
        /* Content */
        .content {
            margin-left: 220px;
            padding: 20px;
        }

        .dynamic-content {
            background-color: white;
            padding: 1.5rem;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4>FeEeT</h4>
        <nav class="nav flex-column">
            <a class="nav-link" href="/Home/"><i class="fa-solid fa-home"></i> Ana Sayfa</a>
            <a class="nav-link" href="/User/"><i class="fa-solid fa-user"></i> Profilim</a>
            <a class="nav-link" href="/User/CreateEvent/"><i class="fa-solid fa-plus"></i> Etkinlik Oluştur</a>
            <a class="nav-link" href="/User/Eventlist/"><i class="fa-solid fa-poll"></i> Etkinliklerim</a>
            <a class="nav-link" href="#" onclick="document.getElementById('logoutForm').submit();">
                <i class="fa-solid fa-sign-out-alt"></i> Çıkış Yap
            </a>

            <form id="logoutForm" action="@Url.Action("Logout", "User")" method="post" style="display: none;">
                @Html.AntiForgeryToken()
            </form>
        </nav>
    </div>
    <!-- Navbar -->
    <nav class="navbar navbar-user-panel">
        <div class="container-fluid">
            <a class="navbar-brand text-white" href="#">
                <i class="fa-solid fa-user"></i> Kullanıcı Paneli
            </a>
        </div>
    </nav>
    <!-- Content -->
    <div class="content">
        <div class="dynamic-content">
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>